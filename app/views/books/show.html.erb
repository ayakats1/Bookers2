<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'info', user: @user, book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @user.image.attached? %>
              <%= image_tag @user.image, :size =>"80×80" %>
              <% else %>
              <%= image_tag 'default-image', :size =>"80x80" %>
              <% end %><br>
              <%= link_to @book.user.name, user_path(current_user.id) %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>